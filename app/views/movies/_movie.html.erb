<div id="movie-details">
  <h2><%= movie.title %></h2>

  <p>
    <strong>Title:</strong>
    <%= movie.title %>
  </p>

  <p>
    <strong>Rating:</strong>
    <%= movie.rating %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= movie.description %>
  </p>

  <p>
    <strong>Release Date:</strong>
    <%= movie.release_date.strftime("%d %B, %Y") %> <!-- Format date as "DD Month, YYYY" -->
  </p>
</div>
